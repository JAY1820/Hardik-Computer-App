        android:text="Dell Mouse 1034i"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/igDetailProduct" />

    <TextView
        android:id="@+id/txDetailDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="ejfbkebfoauegfouelfbeljbfm befkbkebfeflbvefljvbejfbkebfkjsbe,fjvbs,jebvf,jsebf,jsbe,jf"
        android:textSize="19sp"
        android:layout_marginEnd="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txDetailProductName"
        app:layout_constraintTop_toBottomOf="@+id/txDetailProductName" />

    <Button
        android:id="@+id/btnDetailPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="8dp"
        android:text="â‚¹2033"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txDetailProductName" />
</androidx.constraintlayout.widget.ConstraintLayout>